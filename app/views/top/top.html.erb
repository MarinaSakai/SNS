<div class="background-box">
  <div class="header">
    <div class="logo"><img src="<%= "/duck.png" %>"></div>
    <%= link_to "Login", new_user_session_path, :class=> "login" %>
    <%= link_to "Signup", new_user_registration_path, :class=> "signup" %>
  </div>

  <div style="padding: 20px;"></div>
  <% @posts.includes(:post_photos).each do |post| %>
    <div class="posts-index-item">
      <div class="post-left">
        <%= link_to user_path(post.user_id) do %>
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        <% end %>
      </div>
      <div class="post-right">
        <div class="post-user-name">
          <%= link_to post.user.name, user_path(post.user_id) %>
        </div>
        <div class="date">
          <%= l(post.created_at, format: :short) %>
        </div>
        <%= link_to post.content, post_path(post), :class=> "post_content" %>
        <br>
        <% post.post_photos.each do |photo| %>
          <div class="post_photo" style="background:url('<%= photo.image %>') center / contain; background-repeat:no-repeat;"></div>
        <% end %>
        <div class="fav_top">
          <i class="far fa-heart like-btn">
            <% if post.favs_posts.size != 0 %><%= post.favs_posts.size %><% end %>
          </i>
        </div>
      </div>
    </div>
  <% end %>
</div>
